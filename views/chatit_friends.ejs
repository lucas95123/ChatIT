<% include chatit_header.ejs %>
    <div class="container">
        <div class="row" style="margin-top:20px;">
            <!-- 在线列表 -->
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-4">
                                <span class="glyphicon glyphicon-list"></span>
                            </div>
                            <div class="col-md-4 text-center">
                                <b> &nbsp;我的好友</b>
                            </div>
                            <div class="col-md-4 text-right">
                                <button class="btn btn-default btn-sm"><a color="white" href="/searchfriends">添加好友</a></button>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body list-body">
                        <div class="row">
                            <div class="span12">
                                <div class="accordion" id="accordion-467413">
                                    <% for(var i=0;i<3;i++) {%>
                                        <div class="accordion-group">
                                            <div class="accordion-heading">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent=<%- "#accordion-"+i %> href=<%- "#accordion-element-"+i %> >&nbsp;&nbsp;&nbsp;&nbsp;<%-"1070 "+(i+3)+"位好友"%></a>
                                            </div>
                                            <div id=<%- "accordion-element-"+i%> class="accordion-body collapse in">
                                                <div class="list-group">
                                                    <%for(var j=0;j<3;j++) {%>
                                                        <a id="modal-38950" href="#modal-container-38950" class="list-group-item" data-toggle="modal" data-target=<%- "'#friendinfo'" %>>
                                                      <div class="row">
                                                          <div class="col-md-1">
                                                              <img src="image/a.jpg" alt="140*140" class="img-rounded">
                                                          </div>
                                                          <div class="col-md-10">
                                                              <h5 class="list-group-item-heading">李文勇</h5>
                                                              <p class="list-group-item-text">好马不吃回头草</p>
                                                          </div>
                                                      </div>
                                                  </a>
                                                        <%}%>
                                                </div>
                                            </div>
                                        </div>
                                        <%}%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-center" id="list-count">45位联系人</div>
                </div>
            </div>
        </div>
    </div>
